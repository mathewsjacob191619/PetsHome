<script>
   async function handleDelete(id){
    let confirm = window.confirm("Are you sure")
    if(confirm){
        $.ajax({
            url:`/admin/deleteProduct?id=${id}`,
            method:"delete",
            success:async (response)=>{
                alert(response.message)
                window.location.reload()
            }
        })
    }
   }
</script>