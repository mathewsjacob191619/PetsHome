        <script>
           


            $(".btn-update-status").on("click", function () {
                var orderId = $(this).closest("tr").find(".product-status").data("orderid");
                var productId = $(this).closest("tr").find(".product-status").data("productid");
                var status = $(this).closest("tr").find(".product-status").val();
                var data = {
                    orderId: orderId,
                    productId: productId,
                    status: status

                };


                $.ajax({
                    url: "/admin/statusupdate",
                    method: "POST",
                    data: data,
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                title: "Success",
                                text: "Status updated successfully",
                                icon: "success",
                                confirmButtonText: "OK"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    // Refresh the page or perform any other necessary action
                                }
                            });
                        } else {
                            Swal.fire({
                                title: "Error",
                                text: "Failed to update status",
                                icon: "error",
                                confirmButtonText: "OK"
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            title: "Error",
                            text: "Failed to update status",
                            icon: "error",
                            confirmButtonText: "OK"
                        });
                    }
                });
            });






            $("#returnapprove").on("click", function () {
                console.log("clicked");
                var orderid = $(this).data("id");
                var proid =$(this).data("proid")
                var data = {
                    id: orderid,
                    proid:proid
                };
                Swal.fire({
                    title: "Are you sure?",
                    text: "This action cannot undone!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes",
                }).then((result) => {
                    console.log(result);
                    if (result.isConfirmed) {
                        $.ajax({
                            url: "/admin/returnapprove",
                            method: "post",
                            data: data,
                            success: function (response) {
                                if (response.message == "1") {
                                    Swal.fire({
                                        title: "Success",
                                        text: "Return Approved",
                                        icon: "success",
                                        confirmButtonText: "OK",
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = "/admin/order"; // Redirect to another page
                                        }
                                    });
                                } else {
                                    Swal.fire({
                                        title: "Error",
                                        text: "Something went worng",
                                        icon: "error",
                                        confirmButtonText: "OK",
                                    });
                                }
                            },
                        });
                    }
                });
            });

        </script>





