<script>
    function handleUserAction(id,value){
        $.ajax({
            url:`/admin/userAction`,
            data:{
             userId:id,
             isValue:value
            },
            method:"patch",
            success:async(response)=>{
                 window.location.reload()
            }
        })
    }

</script>

