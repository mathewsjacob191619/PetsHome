<%- include('../partials/header') %>

    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Wishlist<span>Shop</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->


        <div class="page-content">
            <div class="container">
                <table class="table table-wishlist table-mobile">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Stock Status</th>
                            <!-- <th></th> -->
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% wishlist.forEach((wishlistItem)=> {
                            wishlistItem.products.forEach((product) => { %>
                            <tr>
                                <td class="product-col">
                                    <div class="product">
                                        <figure class="product-media">
                                            <a href="#">
                                                <img src="uploads/<%= product.productid.productimages[0] %>"
                                                    alt="Product image">
                                            </a>
                                        </figure>

                                        <h3 class="product-title">
                                            <a href="/productView?id=<%=product.productid._id%>">
                                                <%= product.productid.productname %>
                                            </a>
                                        </h3>
                                    </div>
                                </td>
                                <td class="price-col">â‚¹<%= product.productid.productprice %>
                                </td>
                                <%if(product.productid.productquantity==0) {%>
                                    <td class="stock-col"><span class="in-stock">Out Of Stock</span></td>
                                    <%} else{%>
                                        <td class="stock-col"><span class="in-stock">In stock</span></td>
                                        <%}%>
                                       
                                  <td class="action-col">
                                   
									<button class="btn btn-block btn-outline-primary-2"  aria-haspopup="true">
                                        <a href="/addToCart?id=<%=product.productid._id%>">Add To Cart</a>
                                    </button>
                                    <td class="remove-col">
                                        <a href="/deleteProwishlist?id=<%=product.productid._id%>&qty=<%=product.quantity%>" class="btn-remove">
                                            <i class="icon-close">
                                            </i>
                                        </a>
                                    </td>
                                   
                            </tr>
                            <% }); }); %>
                    </tbody>
                </table>
                <div class="wishlist-share">
                    <div class="social-icons social-icons-sm mb-2">
                        <label class="social-label">Share on:</label>
                        <a href="#" class="social-icon" title="Facebook" target="_blank"><i
                                class="icon-facebook-f"></i></a>
                        <a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                        <a href="#" class="social-icon" title="Instagram" target="_blank"><i
                                class="icon-instagram"></i></a>
                        <a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
                        <a href="#" class="social-icon" title="Pinterest" target="_blank"><i
                                class="icon-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </main>



    

    <%- include('../partials/footer') %>