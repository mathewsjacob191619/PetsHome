                            <% } %>
                            </table>



                            <div class="cart-discount">
                                <form action="#">
                                    <p style="color: green;" id="success"></p>
                                    <p style="color: red;" id="invalid"></p>
                                    <div class="input-group mt-2">                                        
                                        <input type="text" class="form-control" id="couponcode" name="couponcode" placeholder="coupon code" />
